package com.techlabs.test;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.stream.Collectors;

public class Test3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		List<String> names = Arrays.asList("Jayesh", "Nimesh", "Merk", "Mahesh", "Ramesh");
		
		List<String> sortedName = names.stream().sorted().limit(3).collect(Collectors.toList());
		System.out.println(sortedName);
		
		List<String> sortedNameA = names.stream().sorted().limit(3).collect(Collectors.toList());
		
		boolean containsA = sortedNameA.stream().anyMatch(name -> name.toLowerCase().contains("a"));
		
		if(containsA) {
			System.out.println(sortedNameA);
		} else {
			System.out.println("no names: ");
		}
		
		List<String> desc = names.stream().sorted(Comparator.reverseOrder()).collect(Collectors.toList());
		System.out.println(desc);
		
		List<String> firstThreeChars = names.stream()
                .map(name -> name.length() >= 3 ? name.substring(0, 3) : name)
                .collect(Collectors.toList());
	}

}
