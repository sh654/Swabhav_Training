package com.techlabs.test;

import java.util.List;
import java.util.ListIterator;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.Iterator;

public class ArrayListDemo {

	public static void main(String args[]) {
		
		ArrayList<String> list = new ArrayList();
		
		List<String> listL = new ArrayList<String>();
		
		List<Integer> integers = Arrays.asList(10, 20, 30,40);
		
		listL.add("Chirag");
		listL.add("Shivam");
		listL.add("Neha");
		
		System.out.println(listL);
		System.out.println("now using for loop on List ");
		for(int i=0; i < list.size(); i++) {
			System.out.println(list.get(i));
		}
		
		System.out.println("now using Advanced for loop on List ");
		for(String name:listL) {
			System.out.println(name);
		}
		
		Iterator<String> iterator = listL.iterator();
		System.out.println("now using iterator List ");
		while(iterator.hasNext())
			System.out.println(iterator.next());
		
		ListIterator<String> listIterator = listL.listIterator();
		System.out.println("now using List iterator on List ");
		while(listIterator.hasNext())
			System.out.println(listIterator.next());
		System.out.println("now using List iterator on List in back");
		while(listIterator.hasPrevious())
			System.out.println(listIterator.previous());
		System.out.println(list);
		
		
		System.out.println(list.size());
		
		list.add("Chirag");
		list.add("Shivam");
		
		System.out.println(list);
		list.add(1, "suyash");
		System.out.println(list);
		
		list.add(50);
		System.out.println(list);
		
		list.remove(3);
		System.out.println(list);
		
		list.set(1, "Chirag Padiyal");
		System.out.println(list);
		
		list.add(null);
		System.out.println(list);
		
		list.clear();
		System.out.println(list);
		
	}
}
