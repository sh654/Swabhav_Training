package com.techlabs.creational.Factory.test;

import com.techlabs.creational.Factory.model.AccountFactory;
import com.techlabs.creational.Factory.model.IAccount;

import com.techlabs.creational.Factory.model.AccountTypes;

public class IAccountTest {
    public static void main(String[] args) {
        // Create a Savings Account
        IAccount savingsAccount = AccountFactory.createAccount(AccountTypes.SAVINGSACCOUNT);
        savingsAccount.credit(1000);
        System.out.println("Savings Account Balance after crediting 1000: " + savingsAccount.credit(0));
        savingsAccount.debit(500);
        System.out.println("Savings Account Balance after debiting 500: " + savingsAccount.credit(0));

        // Create a Current Account
        IAccount currentAccount = AccountFactory.createAccount(AccountTypes.CURRENTACCOUNT);
        currentAccount.credit(2000);
        System.out.println("Current Account Balance after crediting 2000: " + currentAccount.credit(0));
        currentAccount.debit(1500);
        System.out.println("Current Account Balance after debiting 1500: " + currentAccount.credit(0));
    }
}
